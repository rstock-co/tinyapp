<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <%if (users.userID) { %>
      <div class="mr-3">
        <span class="navbar-text" style="color: black">
          Logged in as: <%= users.userID.email %>
        </span>
      </div>
      <form action="/logout" method="POST">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">
          Logout
        </button>
      </form>
      <% } else { %>
        <div class="navbar-nav mr-right">
          <a class="nav-item nav-link" href="/login">Login</a>
          <a class="nav-item nav-link" href="/register">Register</a>
        </div>
      <% } %>
    </div>
  </nav>
</header>
